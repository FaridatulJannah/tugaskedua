                    android:textSize="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tvDescMie5"
                    app:layout_constraintStart_toEndOf="@+id/ivMie5"
                    app:layout_constraintTop_toBottomOf="@+id/tvMie5"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="Mie goreng dengan rasa pedas diatas rata-rata. disajikan dengan tambahan telur."
                    android:textColor="#FFFF"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="10dp"
                    android:maxLines="4"
                    android:layout_width="0dp"
